<%- include ("partials/header") %> 

<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form action="/blogs" method="POST" class="ui form">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" id="title">
    </div>
    <div class="field">
      <label for="image">Image URL</label>
      <input type="text" name="blog[image]" id="image">
    </div>
    <div class="field">
      <label for="body">Blog Content</label>
      <textarea name="blog[body]" id="body" cols="30" rows="10"></textarea>
    </div>
    <input type="submit" value="Submit" class="ui inverted orange button big">
  </form>
</div>

<%- include ("partials/footer") %> 
